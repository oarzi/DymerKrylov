\begin_body

\begin_layout Standard
Bosonic dimers:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
Z\ket{\uparrow}=\ket{\uparrow};\;Z\ket{\downarrow}=-\ket{\downarrow}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
c_{i}=X_{i}\frac{1}{2}\left(1_{i}+Z_{i}\right);c_{i}^{\dagger}=\frac{1}{2}\left(1_{i}+Z_{i}\right)X_{i}
\]

\end_inset


\end_layout

\begin_layout Standard
Since the 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{multline*}
\left[c_{i}^{\dagger},c_{i}\right]=c_{i}^{\dagger}c_{i}-c_{i}c_{i}^{\dagger}=\frac{1}{2}\left(1_{i}+Z_{i}\right)X_{i}X_{i}\frac{1}{2}\left(1_{i}+Z_{i}\right)-X_{i}\frac{1}{2}\left(1_{i}+Z_{i}\right)\frac{1}{2}\left(1_{i}+Z_{i}\right)X_{i}=\\
=\frac{1}{2}\left(1_{i}+Z_{i}\right)\frac{1}{2}\left(1_{i}+Z_{i}\right)-X_{i}\frac{1}{2}\left(1_{i}+Z_{i}\right)X_{i}=\\
=\frac{1}{2}\left(1_{i}+Z_{i}\right)-X_{i}\frac{1}{2}\left(X_{i}+Z_{i}X_{i}\right)=\frac{1}{2}\left(1_{i}+Z_{i}\right)-X_{i}\frac{1}{2}\left(X_{i}-X_{i}Z_{i}\right)=\\
=\frac{1}{2}\left(1_{i}+Z_{i}\right)-X_{i}X_{i}\frac{1}{2}\left(1_{i}-Z_{i}\right)=\frac{1}{2}\left(1_{i}+Z_{i}\right)-\frac{1}{2}\left(1_{i}-Z_{i}\right)=\frac{1}{2}\left(1_{i}+Z_{i}\right)-\frac{1}{2}\left(1_{i}-Z_{i}\right)=Z_{i}
\end{multline*}

\end_inset


\begin_inset Formula 
\[
c_{i}\ket{\uparrow}=X\frac{1}{2}\left(1+Z\right)\ket{\uparrow}=X\frac{1}{2}\left(1\ket{\uparrow}+Z\ket{\uparrow}\right)=X\ket{\uparrow}=\ket{\downarrow}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
c_{i}\ket{\downarrow}=X\frac{1}{2}\left(1+Z\right)\ket{\downarrow}=X\frac{1}{2}\left(1\ket{\downarrow}+Z\ket{\downarrow}\right)=X\frac{1}{2}\left(1-1\right)\ket{\downarrow}=0
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
c_{i}^{\dagger}\ket{\uparrow}=\frac{1}{2}\left(1+Z\right)X\ket{\uparrow}=\frac{1}{2}\left(1+Z\right)\ket{\downarrow}=0
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
c_{i}^{\dagger}\ket{\downarrow}=\frac{1}{2}\left(1+Z\right)X\ket{\downarrow}=\frac{1}{2}\left(1+Z\right)\ket{\uparrow}=\ket{\uparrow}
\]

\end_inset


\end_layout

\begin_layout Standard
For example we have a gate
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
G_{1}=c_{3i}^{\dagger}c_{3\left(i-1\right)+1}\left(1-c_{3\left(i-1\right)+2}^{\dagger}c_{3\left(i-1\right)+2}\right)\left(1-c_{3i+2}^{\dagger}c_{3i+2}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $G_{1}$
\end_inset

 isn't Hermitian sice 
\begin_inset Formula 
\[
G_{1}^{\dagger}=c_{3i}^{\dagger}c_{3\left(i-1\right)+1}\left(1-c_{3\left(i-1\right)+2}^{\dagger}c_{3\left(i-1\right)+2}\right)\left(1-c_{3i+2}^{\dagger}c_{3i+2}\right)
\]

\end_inset


\end_layout

