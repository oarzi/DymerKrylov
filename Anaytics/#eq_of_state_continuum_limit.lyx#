\begin_body

\begin_layout Section
Brownian motion in a gravitational potential
\end_layout

\begin_layout Standard
Expect equilibrium distribution:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
P\propto e^{-\kappa V\left(x\right)}=e^{-\frac{x}{D}}
\]

\end_inset


\end_layout

\begin_layout Standard
Simple diffusion equation:
\begin_inset Formula 
\[
\frac{\partial P}{\partial t}=D\nabla^{2}P
\]

\end_inset

 Fokker-Planck equation:
\begin_inset Formula 
\[
\frac{\partial P}{\partial t}-\nabla\cdot\vec{j}=\frac{\partial P}{\partial t}-\left(D\nabla^{2}P-\vec{v}\cdot\nabla P-P\vec{\nabla}\cdot\vec{v}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\vec{j}=\partial_{x}\left(V\left(x\right)P-D\partial_{x}P\right)
\]

\end_inset

and if the velocity is constant
\begin_inset Formula 
\[
\frac{\partial P}{\partial t}=D\nabla^{2}P-\vec{v}\cdot\nabla P
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{\partial P}{\partial t}+\vec{\nabla}\cdot\vec{j}=0
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\vec{j}=\vec{v}P-D\nabla P
\]

\end_inset


\end_layout

\begin_layout Standard
can verify that indeed 
\begin_inset Formula $P\propto e^{-\frac{V\left(x\right)}{D}}$
\end_inset

 is a stationary distribution.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
D\nabla^{2}P=D\partial_{x}\left(\partial_{x}P\right)=D\partial_{x}\left(-\frac{1}{D}P\partial_{x}V\right)=-\partial_{x}P\partial_{x}V-P\partial_{x}^{2}V=\frac{v^{2}}{D}P-P\partial_{x}^{2}V
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
-\vec{v}\cdot\nabla P=-v\partial_{x}P=-v\left(-\frac{1}{D}P\partial_{x}V\right)=-\frac{v^{2}}{D}P
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
-P\vec{\nabla}\cdot\vec{v}=P\partial_{x}^{2}V
\]

\end_inset


\end_layout

\begin_layout Section
Dimer model
\end_layout

\begin_layout Subsection
Golden ratio exponential equilibrium distribution
\end_layout

\begin_layout Standard
Hypothesized equilibrium distribution at 
\begin_inset Formula $t\rightarrow\infty$
\end_inset

:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
P\left(x\right)\propto\phi^{L-x}=e^{\left(L-x\right)\ln\phi}
\]

\end_inset


\end_layout

\begin_layout Standard
consisten with equilibrium Boltzman distribution in a gravitational potential.
\end_layout

\begin_layout Standard
Let's verify:
\begin_inset Formula 
\[
P\left(0,t\right)=\frac{\phi}{1+\phi}\phi^{L}+\frac{\phi^{2}}{1+\phi+\phi^{2}}\phi^{L-1}=\frac{\phi}{1+\phi}\phi^{L}+\frac{\phi}{1+\phi+\phi^{2}}\phi^{L}=\left(\frac{\phi}{1+\phi}+\frac{\phi}{1+\phi+\phi^{2}}\right)\phi^{L}=\frac{3}{2\phi}\phi^{L}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
P\left(1,t\right)=\frac{1}{1+\phi}\phi^{L}+\frac{\phi}{1+\phi+\phi^{2}}\phi^{L-1}+\frac{\phi^{2}}{1+\phi+\phi^{2}}\phi^{L-2}=\frac{2}{\phi}\phi^{L-1}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
P\left(x,t\right)=\frac{1}{1+\phi+\phi^{2}}\phi^{L-\left(x-1\right)}+\frac{\phi}{1+\phi+\phi^{2}}\phi^{L-x}+\frac{\phi^{2}}{1+\phi+\phi^{2}}\phi^{L-\left(x+1\right)}=\frac{3}{2\phi}\phi^{L-x}
\]

\end_inset


\end_layout

\begin_layout Standard
The finite-differences equation does not support the exponenital decay only
 for 
\begin_inset Formula $x=1$
\end_inset

, but that is ok if it predicts the correct continuum equation.
\end_layout

\begin_layout Subsection
Finite-diferecnes equation - 2nd attempt
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
P\left(x,t\right)=\frac{1}{2}\frac{1}{\phi^{2}+\phi+1}P\left(x-1,t-1\right)+\frac{1}{2}\left(\frac{1}{\phi+1}+\frac{\phi}{\phi^{2}+\phi+1}\right)P\left(x,t-1\right)+\frac{1}{2}\left(\frac{\phi}{\phi+1}+\frac{\phi^{2}}{\phi^{2}+\phi+1}\right)P\left(x+1,t-1\right)
\]

\end_inset


\end_layout

\begin_layout Standard
Let's derive the continuum equation:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\phi^{2}-\phi-1=0
\]

\end_inset


\begin_inset Formula 
\[
P\left(x,t\right)=\frac{1}{4\phi^{2}}P\left(x-1,t-1\right)+\frac{2+\phi}{4\phi^{2}}P\left(x,t-1\right)+\frac{2\phi+\phi^{2}}{4\phi^{2}}P\left(x+1,t-1\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
4\phi^{2}P\left(x,t\right)=P\left(x-1,t-1\right)+2\left(1+\frac{\phi}{2}\right)P\left(x,t-1\right)+2\left(\phi+\frac{\phi^{2}}{2}\right)P\left(x+1,t-1\right)
\]

\end_inset


\end_layout

\begin_layout Standard
subtract 
\begin_inset Formula $4\phi^{2}P\left(x,t-1\right)$
\end_inset

 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
4\phi^{2}\left(P\left(x,t\right)-P\left(x,t-1\right)\right)=P\left(x-1,t-1\right)+\left(2+\phi\right)P\left(x,t-1\right)-4\phi^{2}P\left(x,t-1\right)+\left(2\phi+\phi^{2}\right)P\left(x+1,t-1\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
4\phi^{2}\left(P\left(x,t\right)-P\left(x,t-1\right)\right)=P\left(x-1,t-1\right)+\left(-2-3\phi\right)P\left(x,t-1\right)+\left(3\phi+1\right)P\left(x+1,t-1\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
4\phi^{2}\left(P\left(x,t\right)-P\left(x,t-1\right)\right)=\left[P\left(x+1,t-1\right)-2P\left(x,t-1\right)+P\left(x-1,t-1\right)\right]+3\phi\left[P\left(x+1,t-1\right)-P\left(x,t-1\right)\right]
\]

\end_inset


\end_layout

\begin_layout Standard
set 
\begin_inset Formula $\frac{\tau\kappa}{a^{2}}=1$
\end_inset

 and 
\begin_inset Formula $\frac{\tau v}{a}=1$
\end_inset

 (is thie valid?):
\begin_inset Formula 
\[
4\phi^{2}\left(P\left(x,t\right)-P\left(x,t-1\right)\right)=\frac{\tau\kappa}{a^{2}}\left[P\left(x+1,t-1\right)-2P\left(x,t-1\right)+P\left(x-1,t-1\right)\right]+3\phi\frac{\tau v}{a}\left(P\left(x+1,t-1\right)-P\left(x,t-1\right)\right)
\]

\end_inset


\begin_inset Formula 
\[
\frac{P\left(x,t\right)-P\left(x,t-1\right)}{\tau}=\frac{\kappa}{4\phi^{2}}\frac{\left[P\left(x-1,t-1\right)-2P\left(x,t-1\right)+P\left(x+1,t-1\right)\right]}{a^{2}}-\frac{3v}{4\phi}\frac{\left[P\left(x,t-1\right)-P\left(x+1,t-1\right)\right]}{a}
\]

\end_inset


\end_layout

\begin_layout Standard
Taking the continuum limit 
\begin_inset Formula $a,\tau\rightarrow0$
\end_inset

:
\begin_inset Box Boxed
position "t"
hor_pos "c"
has_inner_box 1
inner_pos "t"
use_parbox 0
use_makebox 0
width "100col%"
special "none"
height "1in"
height_special "totalheight"
thickness "0.4pt"
separation "3pt"
shadowsize "4pt"
framecolor "black"
backgroundcolor "none"
status open

\begin_layout Plain Layout
\begin_inset Formula 
\[
\partial_{t}P\left(x,t\right)=\underbrace{\frac{\kappa}{4\phi^{2}}}_{K}\partial_{x}^{2}P\left(x,t\right)-\underbrace{\frac{3v}{4\phi}}_{V}\partial_{x}P\left(x,t\right)
\]

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
P\underset{t\rightarrow\infty}{\rightarrow}e^{3\phi\frac{v}{\kappa}x}=e^{\frac{V}{K}x}
\]

\end_inset

This equation describe a stochastic motion under a potential 
\begin_inset Formula $V=V\left(x\right)$
\end_inset

 which is linear.
 Therefore the equilibrium distribution is given by 
\begin_inset Formula $P\propto e^{-\alpha x}$
\end_inset

.
 The solutions before equilibrium are given by 
\begin_inset Formula 
\[
P\left(x,t\right)=\frac{1}{\sqrt{4\pi t}}e^{-\frac{-\left(x-vt-x_{0}\right)^{2}}{4\kappa t}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $v,\kappa$
\end_inset

 are phenomenological parametrs, but are related to the mean and varianve
 of the coefficients in the EOS.
\end_layout

\begin_layout Standard
Of course, the finite-difference equation can be further refiend, since
 me assume that a particle site 
\begin_inset Formula $x$
\end_inset

 has equal probabilities to be in a state where it can move to 
\begin_inset Formula $x\pm0,1$
\end_inset

, and in a state where it can only move to 
\begin_inset Formula $x-0,1$
\end_inset

.
 We also assumed here 
\begin_inset Formula $p_{hop}=p_{plaquette}=\frac{1}{2}$
\end_inset

.
\end_layout

\begin_layout Standard
To allow arbitrary hop and plaquette probabilities we write 
\begin_inset Formula $p_{hop}=\frac{1-\delta}{2}$
\end_inset

 with 
\begin_inset Formula $\delta\in\left[-1,1\right]$
\end_inset

:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
P\left(x,t\right)=\frac{1}{2}\frac{1-\delta}{2}\frac{1}{3}P\left(x-1,t-1\right)+\frac{1}{2}\left(\left(1-\frac{1-\delta}{2}\frac{1}{2}\right)+\left(1-\frac{1-\delta}{2}\frac{2}{3}\right)\right)P\left(x,t-1\right)+\frac{1}{2}\left(\frac{1-\delta}{2}\frac{1}{2}+\frac{1-\delta}{2}\frac{1}{3}\right)P\left(x+1,t-1\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
P\left(x,t\right)=\frac{1-\delta}{2}\frac{2}{12}P\left(x-1,t-1\right)+\left(1-\frac{1-\delta}{2}\frac{7}{12}\right)P\left(x,t-1\right)+\frac{1-\delta}{2}\frac{5}{12}P\left(x+1,t-1\right)
\]

\end_inset


\end_layout

\begin_layout Standard
Now we can write a continuity equation where 
\begin_inset Formula $\delta$
\end_inset

 is a parameter.
 In taking the continuum limit 
\begin_inset Formula $\delta\rightarrow0$
\end_inset

 and the way it scales w.r.t to the time 
\begin_inset Formula $\tau$
\end_inset

 determines the velocity.
 Therefore, for any value of 
\begin_inset Formula $\delta$
\end_inset

 the solution should collapse on top of each other after a proper rescaling.
\end_layout

\begin_layout Standard
It is possible to calculate the diffusion and velocity coefficients (up
 to dependence on the time scale) with the Moyal-Kramers expension.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\partial_{t}P\left(x,t\right)=-\frac{C_{1}}{\tau}\partial_{x}^{2}P\left(x,t\right)+\frac{C_{2}}{2\tau}\partial_{x}P\left(x,t\right)
\]

\end_inset


\end_layout

\begin_layout Standard
See here for details:
\end_layout

\begin_layout Standard
https://ocw.mit.edu/courses/18-366-random-walks-and-diffusion-fall-2006/pages/stud
y-materials/
\end_layout

\begin_layout Standard
https://math.stackexchange.com/questions/1875688/drift-velocity-of-continuum-limit
-of-biased-discrete-random-walk-doesnt-match-g
\end_layout

\begin_layout Standard
Also Risken ch.
 .9
\end_layout

\begin_layout Standard
Entropy:
\begin_inset Formula 
\begin{multline*}
-S\left(t\right)=\int dx\frac{1}{\sqrt{4\pi Dt}}e^{-\frac{\left(x-vt\right)^{2}}{4Dt}}\ln\left(\frac{1}{\sqrt{4\pi Dt}}e^{-\frac{\left(x-vt\right)^{2}}{4Dt}}\right)=-\int dx\frac{1}{\sqrt{4\pi Dt}}e^{-\frac{x^{2}}{4Dt}}\left[\frac{x^{2}}{4Dt}+\frac{1}{2}\ln\left(4\pi Dt\right)\right]=\\
=-\int dx\frac{1}{\sqrt{4\pi Dt}}e^{-\frac{x^{2}}{4Dt}}\frac{x^{2}}{4Dt}-\frac{1}{2}\ln\left(4\pi Dt\right)\int dx\frac{1}{\sqrt{4\pi Dt}}e^{-\frac{x^{2}}{4Dt}}=-\frac{t}{\sqrt{4\pi Dt}}\frac{\partial}{\partial t}\int dxe^{-\frac{x^{2}}{4Dt}}-\frac{1}{2}\ln\left(4\pi Dt\right)=\\
=-\frac{\sqrt{t}}{\sqrt{4\pi D}}\frac{\partial}{\partial t}\sqrt{4D\pi t}-\frac{1}{2}\ln\left(4\pi Dt\right)=-\sqrt{t}\frac{1}{2\sqrt{t}}-\frac{1}{2}\ln\left(4\pi Dt\right)=-\frac{1}{2}-\frac{1}{2}\ln\left(4\pi Dt\right)
\end{multline*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
S\left(t\right)=\frac{1}{2}+\frac{1}{2}\ln\left(4\pi Dt\right)=\frac{1}{2}+\frac{1}{2}\ln\left(4\pi D\right)+\frac{1}{2}\ln t
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{dS}{dt}=\frac{1}{2t}>0
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
x'=x+vt-x_{0}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{multline*}
x\left(t\right)=\int_{-\infty}^{\infty}dx\,x\frac{1}{\sqrt{4\pi Dt}}e^{-\frac{\left(x+vt-x_{0}\right)^{2}}{4Dt}}=\int_{-\infty}^{\infty}dx\,\left(x-vt+x_{0}\right)\frac{1}{\sqrt{4\pi Dt}}e^{-\frac{x^{2}}{4Dt}}=\\
=\frac{1}{\sqrt{4\pi Dt}}\int_{-\infty}^{\infty}dx\,xe^{-\frac{x^{2}}{4Dt}}+\left(-vt+x_{0}\right)=-\frac{1}{\sqrt{4\pi Dt}}\left(2Dt\right)\int_{-\infty}^{\infty}dx\,\frac{\partial}{\partial x}e^{-\frac{x^{2}}{4Dt}}+\left(-vt+x_{0}\right)=\\
=-\sqrt{\frac{Dt}{\pi}}\cancel{\int_{-\infty}^{\infty}dx\,\frac{\partial}{\partial x}e^{-\frac{x^{2}}{4Dt}}}+\left(x_{0}-vt\right)=x_{0}-vt
\end{multline*}

\end_inset


\end_layout

\begin_layout Standard
We want to solve the diffusion equation
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\partial_{t}\rho\left(x,t\right)=K\partial_{x}^{2}\rho\left(x,t\right)-V\partial_{x}\rho\left(x,t\right)=\partial_{x}\left(K\partial_{x}\rho\left(x,t\right)-V\rho\left(x,t\right)\right)
\]

\end_inset


\end_layout

\begin_layout Standard
with boundary conditions:
\begin_inset Formula 
\[
\begin{cases}
\partial_{x}\rho\left(0,t\right)-\frac{V}{K}\rho\left(0,t\right)=0\\
\partial_{x}\rho\left(L,t\right)-\frac{V}{K}\rho\left(L,t\right)=0\\
\rho\left(x,0\right)=\delta\left(x-x_{0}\right)
\end{cases}
\]

\end_inset


\end_layout

\begin_layout Standard
define 
\begin_inset Formula 
\[
\rho\left(x,t\right)=A\left(x,t\right)B\left(x,t\right)
\]

\end_inset


\end_layout

\begin_layout Standard
Then setting 
\begin_inset Formula $A\left(x,t\right)=e^{-\frac{V^{2}}{4K}t}e^{\frac{V}{2K}x}$
\end_inset

 yields a simple diffusion equation for 
\begin_inset Formula $B$
\end_inset

:
\begin_inset Formula 
\[
\partial_{t}B=K\partial_{xx}B
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\partial_{x}\rho\left(x,t\right)=B\left(x,t\right)\partial_{x}A\left(x,t\right)+A\left(x,t\right)\partial_{x}B\left(x,t\right)=\frac{V}{2K}B\left(x,t\right)A\left(x,t\right)+A\left(x,t\right)\partial_{x}B\left(x,t\right)=A\left(x,t\right)\left(\frac{V}{2K}B\left(x,t\right)+\partial_{x}B\left(x,t\right)\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
-\frac{V}{K}\rho\left(x,t\right)=-\frac{V}{K}A\left(x,t\right)B\left(x,t\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\partial_{x}\rho\left(x,t\right)-\frac{V}{K}\rho\left(x,t\right)=A\left(x,t\right)\left(\frac{V}{2K}B\left(x,t\right)+\partial_{x}B\left(x,t\right)\right)-\frac{V}{K}A\left(x,t\right)B\left(x,t\right)=A\left(x,t\right)\left[\frac{V}{2K}B\left(x,t\right)+\partial_{x}B\left(x,t\right)-\frac{V}{K}B\left(x,t\right)\right]=A\left(x,t\right)\left[\partial_{x}B\left(x,t\right)-\frac{V}{2K}B\left(x,t\right)\right]
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\partial_{x}\rho\left(0,t\right)-\frac{V}{K}\rho\left(0,t\right)=0\Rightarrow A\left(0,t\right)\left[\partial_{x}B\left(x,t\right)|_{x=0}-\frac{V}{2K}B\left(0,t\right)\right]=0\Rightarrow\partial_{x}B\left(x,t\right)|_{x=0}=\frac{V}{2K}B\left(0,t\right)
\]

\end_inset


\begin_inset Formula 
\[
\partial_{x}\rho\left(L,t\right)-\frac{V}{K}\rho\left(L,t\right)=0\Rightarrow A\left(L,t\right)\left[-\frac{V}{2K}B\left(L,t\right)+\partial_{x}B\left(x,t\right)|_{x=L}\right]=0\Rightarrow\partial_{x}B\left(x,t\right)|_{x=L}=\frac{V}{2K}B\left(L,t\right)
\]

\end_inset


\end_layout

\begin_layout Standard
with initial conditions 
\begin_inset Formula $B\left(x,t\right)=e^{-\frac{V}{2K}x}\delta\left(x-x_{0}\right)$
\end_inset

.
 
\end_layout

\begin_layout Standard
We assume sepration of variables for 
\begin_inset Formula $B\left(x,t\right)=T\left(t\right)X\left(x\right)$
\end_inset

:
\begin_inset Formula 
\[
X\left(x\right)\partial_{t}T\left(t\right)=KT\left(t\right)\partial_{xx}X\left(x\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\Rightarrow\frac{\partial_{t}T\left(t\right)}{T\left(t\right)}=K\frac{\partial_{xx}X\left(x\right)}{X\left(x\right)}=K\lambda
\]

\end_inset

The boundary conditions are:
\begin_inset Formula 
\[
\begin{cases}
\partial_{x}B\left(x,t\right)|_{x=0}=\frac{V}{2K}B\left(0,t\right)\\
\partial_{x}B\left(x,t\right)|_{x=L}=\frac{V}{2K}B\left(L,t\right)\\
B\left(x,0\right)=e^{-\frac{V}{2K}x}\delta\left(x-x_{0}\right)
\end{cases}
\]

\end_inset


\end_layout

\begin_layout Standard
The condition 
\begin_inset Formula $\partial_{x}B\left(x\right)|_{0}-\frac{V}{2K}B\left(0\right)=0$
\end_inset

 is actualy 
\begin_inset Formula $\partial_{x}X\left(x\right)|_{0}-\frac{V}{2K}X\left(0\right)=0$
\end_inset

.
 So we look for solutions to 
\begin_inset Formula $X''+\lambda X=0$
\end_inset

 s.t.
 the boundary condition holds, and that the entire solution is normalizable
 in 
\begin_inset Formula $\left[0,L\right]$
\end_inset

.
\end_layout

\begin_layout Standard
separation of varaibles for 
\begin_inset Formula $B$
\end_inset

 yields:
\begin_inset Formula 
\[
B_{k}\left(x,t\right)=T_{k}\left(t\right)B_{k}\left(x\right)=e^{-Kk^{2}t}\left(C_{k,1}\cos\left(kx\right)+C_{k,2}\sin\left(kx\right)\right)
\]

\end_inset


\end_layout

\begin_layout Standard
General solution:
\begin_inset Formula 
\[
\rho\left(x,t\right)=A\left(x,t\right)\sum_{k}B_{k}\left(x,t\right)
\]

\end_inset


\end_layout

\begin_layout Standard
This should hold for every 
\begin_inset Formula $k$
\end_inset

:
\begin_inset Formula 
\[
\partial_{x}B_{k}\left(x\right)|_{x=0}=\frac{V}{2K}B_{k}\left(0\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
k\left(-C_{k,1}\sin\left(0\right)+C_{k,2}\cos\left(0\right)\right)=\frac{V}{2K}\left(C_{k,1}\cos\left(0\right)+C_{k,2}\sin\left(0\right)\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
C_{k,2}=\frac{V}{2Kk}C_{k,1}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\partial_{x}B_{k}\left(x,t\right)|_{x=L}=\frac{V}{2K}B_{k}\left(L,t\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
k\left(-C_{k,1}\sin\left(kL\right)+C_{k,2}\cos\left(kL\right)\right)=\frac{V}{2K}\left(C_{k,1}\cos\left(kL\right)+C_{k,2}\sin\left(kL\right)\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
k\left(-\sin\left(kL\right)+\frac{V}{2Kk}\cos\left(kL\right)\right)=\frac{V}{2K}\left(\cos\left(kL\right)+\frac{V}{2Kk}\sin\left(kL\right)\right)
\]

\end_inset


\begin_inset Formula 
\[
-k\sin\left(kL\right)+\frac{V}{2K}\cos\left(kL\right)=\frac{V}{2K}\left(\cos\left(kL\right)+\frac{V}{2Kk}\sin\left(kL\right)\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(k+\left(\frac{V}{2K}\right)^{2}\frac{1}{k}\right)\sin\left(kL\right)=0
\]

\end_inset

so either 
\begin_inset Formula $k=\frac{n\pi}{L}$
\end_inset

 
\begin_inset Formula $n=1,2,3,\dots$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
B_{n}\left(x\right)=\cos\left(\frac{n\pi}{L}x\right)+\frac{VL}{2Kn\pi}\sin\left(\frac{n\pi}{L}x\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
B_{+}\left(x,t\right)=C_{k,+}e^{K\left(\frac{V}{2K}\right)^{2}t}e^{\frac{V}{2K}x}=C_{k,+}e^{\frac{V^{2}}{4K}t}e^{\frac{V}{2K}x}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\partial_{t}B\left(x,t\right)=K\partial_{xx}B\left(x,t\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
B_{+}\left(0\right)=1
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\partial_{x}B_{+}|_{0}=\frac{V}{2K}e^{\frac{V}{2K}0}=\frac{V}{2K}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
B_{+}\left(L\right)=e^{\frac{V}{2K}L}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\partial_{x}B_{+}|_{0}=\frac{V}{2K}e^{\frac{V}{2K}L}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
A\left(x,t\right)B_{+}\left(x,t\right)=C_{k,+}e^{-\frac{V^{2}}{4K}t}e^{\frac{V}{2K}x}e^{\frac{V^{2}}{4K}t}e^{\frac{V}{2K}x}=C_{k,+}e^{\frac{V}{K}x}
\]

\end_inset


\end_layout

\begin_layout Standard
we can label the solutions 
\begin_inset Formula $k_{n}$
\end_inset

 for 
\begin_inset Formula $n\in\mathbb{N}/\left\{ 0\right\} $
\end_inset

, these are solutions for a Sturm-Liouville problem.
\begin_inset Formula 
\[
A\left(x,t\right)=e^{-\frac{V^{2}}{4K}t}e^{\frac{V}{2K}x}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\rho\left(x,t\right)=A\left(x,t\right)\left[C_{+}e^{\frac{V^{2}}{4K}t}e^{\frac{V}{2K}x}+\sum_{n}C_{k,n}e^{-K\left(\frac{n\pi}{L}\right)^{2}t}\left(\cos\left(\frac{n\pi}{L}x\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x\right)\right)\right]
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\rho\left(x,t\right)=C_{+}e^{\frac{V}{K}x}+A\left(x,t\right)\sum_{n}C_{k,n}e^{-K\left(\frac{n\pi}{L}\right)^{2}t}\left(\cos\left(\frac{n\pi}{L}x\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x\right)\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\rho\left(x,t=0\right)=A\left(x,0\right)\left[C_{+}e^{\frac{V}{2K}x}+\sum_{n}C_{k,n}\left(\cos\left(\frac{n\pi}{L}x\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x\right)\right)\right]=\delta\left(x-x_{0}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\Rightarrow C_{+}e^{\frac{V}{2K}x}+\sum_{k}C_{k,1}\left(\cos\left(\frac{n\pi}{L}x\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x\right)\right)=e^{-\frac{V}{2K}x}\delta\left(x-x_{0}\right)
\]

\end_inset


\begin_inset Formula 
\[
\Rightarrow\int_{0}^{L}dxC_{k,+}e^{\frac{V}{K}x}=\int_{0}^{L}dx\delta\left(x-x_{0}\right)=1\Rightarrow C_{k,+}=\frac{V}{K\left(e^{\frac{V}{K}L}-1\right)}\underset{L\rightarrow\infty}{\rightarrow}-\frac{V}{K}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\int_{0}^{L}dx\sum_{n}C_{n,1}\left(\cos\left(\frac{n\pi}{L}x\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x\right)\right)\left(\cos\left(\frac{m\pi}{L}x\right)+\frac{VL}{2m\pi K}\sin\left(\frac{m\pi}{L}x\right)\right)=\int_{0}^{L}dx\left(\cos\left(\frac{m\pi}{L}x\right)+\frac{VL}{2m\pi K}\sin\left(\frac{m\pi}{L}x\right)\right)e^{-\frac{V}{2K}x}\delta\left(x-x_{0}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{multline*}
\Rightarrow C_{k,1}\int_{0}^{L}dx\left(\cos\left(\frac{n\pi}{L}x\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x\right)\right)^{2}=\left(\cos\left(\frac{n\pi}{L}x_{0}\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x_{0}\right)\right)e^{-\frac{V}{2K}x_{0}}\\
\Rightarrow C_{n,1}=\frac{\left(\cos\left(\frac{n\pi}{L}x_{0}\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x_{0}\right)\right)e^{-\frac{V}{2K}x_{0}}}{\int_{0}^{L}dx\left(\cos\left(\frac{n\pi}{L}x\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x\right)\right)^{2}}=\frac{2}{L\left(1+\left(\frac{VL}{2n\pi K}\right)^{2}\right)}\left(\cos\left(\frac{n\pi}{L}x_{0}\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x_{0}\right)\right)e^{-\frac{V}{2K}x_{0}}
\end{multline*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\int_{0}^{L}dx\left(\cos\left(\frac{n\pi}{L}x\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x\right)\right)^{2}=\frac{L}{2}\left(1+\left(\frac{VL}{2n\pi K}\right)^{2}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{VL}{n\pi K}\int_{0}^{L}dx\cos\left(\frac{n\pi}{L}x\right)\sin\left(\frac{n\pi}{L}x\right)=\frac{VL}{n\pi K}\int_{0}^{L}dx\frac{1}{2}\left[\sin\left(\frac{n\pi}{L}x-\frac{n\pi}{L}x\right)+\sin\left(\frac{n\pi}{L}x+\frac{n\pi}{L}x\right)\right]=\frac{VL}{2n\pi K}\int_{0}^{L}dx\sin\left(\frac{2n\pi}{L}x\right)=\frac{VL}{2n\pi K}\left[-\frac{L}{2n\pi}\cos\left(\frac{2n\pi}{L}x\right)\right]|_{0}^{L}=\frac{VL}{2n\pi K}\left[-\frac{L}{2n\pi}+\frac{L}{2n\pi}\right]|_{0}^{L}=0
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{multline*}
\int_{0}^{L}dx\left(\cos\left(\frac{n\pi}{L}x\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x\right)\right)\left(\cos\left(\frac{m\pi}{L}x\right)+\frac{VL}{2m\pi K}\sin\left(\frac{m\pi}{L}x\right)\right)=\\
=\frac{1}{m}\frac{VL}{2\pi K}\int_{0}^{L}dx\cos\left(\frac{n\pi}{L}x\right)\sin\left(\frac{m\pi}{L}x\right)+\frac{VL}{2\pi nK}\int_{0}^{L}dx\sin\left(\frac{n\pi}{L}x\right)\cos\left(\frac{m\pi}{L}x\right)=\frac{VL}{2\pi K}\frac{1-\cos\left(m\pi\right)\cos\left(n\pi\right)}{\pi\left(m^{2}-n^{2}\right)}-\frac{VL}{2\pi K}\frac{1-\cos\left(m\pi\right)\cos\left(n\pi\right)}{\pi\left(m^{2}-n^{2}\right)}=0
\end{multline*}

\end_inset


\begin_inset Box Boxed
position "t"
hor_pos "c"
has_inner_box 1
inner_pos "t"
use_parbox 0
use_makebox 0
width "100col%"
special "none"
height "1in"
height_special "totalheight"
thickness "0.4pt"
separation "3pt"
shadowsize "4pt"
framecolor "black"
backgroundcolor "none"
status open

\begin_layout Plain Layout
\begin_inset Formula 
\[
\rho\left(x,t\right)=\frac{V}{K\left(e^{\frac{V}{K}L}-1\right)}e^{\frac{V}{K}x}+\frac{2}{L}e^{-\frac{V^{2}}{4K}t}e^{\frac{V}{2K}\left(x-x_{0}\right)}\sum_{n}\frac{1}{1+\left(\frac{VL}{2n\pi K}\right)^{2}}\left(\cos\left(\frac{n\pi}{L}x_{0}\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x_{0}\right)\right)e^{-K\left(\frac{n\pi}{L}\right)^{2}t}\left(\cos\left(\frac{n\pi}{L}x\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x\right)\right)
\]

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
N_{L}=\int_{0}^{L}dx\rho\left(x,t\right)=\frac{2}{L}e^{-\frac{V^{2}}{4K}t}\sum_{k}e^{-Kk^{2}t}\left(1+\left(\frac{VL}{2n\pi K}\right)^{2}\right)\int_{0}^{L}dx\left(\cos\left(kx_{0}\right)+\frac{VL}{2\pi nK}\sin\left(kx_{0}\right)\right)\int_{0}^{L}dxe^{\frac{V}{2K}\left(x-x_{0}\right)}\left(\cos\left(kx\right)+\frac{V}{2Kk}\sin\left(kx\right)\right)=\frac{2}{L}e^{-\frac{V^{2}}{4K}t}\sum_{k}\left(1+\left(\frac{VL}{2n\pi K}\right)^{2}\right)e^{-Kk^{2}t}e^{-\frac{V}{2K}x_{0}}N_{k}^{\left(L\right)}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
N_{0}^{\left(L\right)}=C_{+}\int_{0}^{L}dxe^{\frac{V}{K}x}=\frac{V}{K\left(e^{\frac{V}{K}L}-1\right)}\frac{K}{V}\left(e^{\frac{V}{K}L}-1\right)=1
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{multline*}
N_{k>0}^{\left(L\right)}=\int_{0}^{L}dxe^{\frac{V}{2K}x}\left(\cos\left(kx\right)+\frac{V}{2Kk}\sin\left(kx\right)\right)=\frac{e^{\frac{V}{2K}L}\left(\frac{V}{2K}\cos\left(kL\right)-\frac{V}{2K}e^{-\frac{V}{2K}L}+k\sin\left(kL\right)\right)}{k^{2}+\left(\frac{V}{2K}\right)^{2}}+\frac{V}{2Kk}\frac{e^{\frac{V}{2K}L}\left(ke^{-\frac{V}{2K}L}+\frac{V}{2K}\sin\left(kL\right)-k\cos\left(kL\right)\right)}{k^{2}+\left(\frac{V}{2K}\right)^{2}}=\\
=\frac{e^{\frac{V}{2K}L}\left(\frac{1}{k}\left(\frac{V}{2K}\right)^{2}+k\right)\sin\left(kL\right)}{k^{2}+\left(\frac{V}{2K}\right)^{2}}=0
\end{multline*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
N_{L}=1
\]

\end_inset


\end_layout

\begin_layout Standard
when 
\begin_inset Formula $t\approx0$
\end_inset

:
\begin_inset Formula 
\begin{multline*}
\rho_{\infty}\left(x,t\right)=\rho\frac{V}{K\left(e^{\frac{V}{K}L}-1\right)}e^{\frac{V}{K}x}+\frac{2}{L}\left(1-\frac{V^{2}}{4K}t\right)e^{\frac{V}{2K}\left(x-x_{0}\right)}\sum_{n}\frac{1}{\left(1+\left(\frac{VL}{2n\pi K}\right)^{2}\right)}\left(\cos\left(\frac{n\pi}{L}x_{0}\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x_{0}\right)\right)\left(1-K\left(\frac{n\pi}{L}\right)^{2}t\right)\left(\cos\left(\frac{n\pi}{L}x\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x\right)\right)=\\
=\rho\frac{V}{K\left(e^{\frac{V}{K}L}-1\right)}e^{\frac{V}{K}x}-te^{\frac{V}{2K}\left(x-x_{0}\right)}\sum_{n}\frac{1}{\left(1+\left(\frac{VL}{2n\pi K}\right)^{2}\right)}\left(\cos\left(\frac{n\pi}{L}x_{0}\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x_{0}\right)\right)\left(\frac{V^{2}}{2LK}+\frac{2K}{L}\left(\frac{n\pi}{L}\right)^{2}\right)\left(\cos\left(\frac{n\pi}{L}x\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x\right)\right)+
\end{multline*}

\end_inset


\end_layout

\begin_layout Standard
We want to solve the diffusion equation
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\partial_{t}\rho\left(x,t\right)=K\partial_{x}^{2}\rho\left(x,t\right)-V\partial_{x}\rho\left(x,t\right)
\]

\end_inset


\end_layout

\begin_layout Standard
with boundary conditions
\begin_inset Formula 
\[
\rho\left(x,t\right)=\begin{cases}
0 & x<0\\
\delta\left(x-x_{0}\right) & t=0
\end{cases}
\]

\end_inset


\end_layout

\begin_layout Standard
Guess solutions by seperetaion of varaibles
\begin_inset Formula 
\[
\rho\left(x,t\right)=T\left(t\right)X\left(x\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\int dx\rho\left(x,t\right)=1\Rightarrow T\left(t\right)\int dxX\left(x\right)=1\Rightarrow T\left(t\right)=1
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
X\left(x\right)\partial_{t}T\left(t\right)=T\left(t\right)K\partial_{x}^{2}X\left(x\right)-T\left(t\right)V\partial_{x}X\left(x\right)
\]

\end_inset


\begin_inset Formula 
\[
\frac{\partial_{t}T\left(t\right)}{T\left(t\right)}=\frac{K\partial_{x}^{2}X\left(x\right)-V\partial_{x}X\left(x\right)}{X\left(x\right)}=C_{\tau}
\]

\end_inset


\end_layout

\begin_layout Standard
therefore 
\begin_inset Formula $T\left(t\right)=e^{-C_{\tau}t}$
\end_inset

 for 
\begin_inset Formula $C_{\tau}\geq0$
\end_inset

 since otherwise 
\begin_inset Formula $\rho$
\end_inset

 wouldn't be normalized.
\end_layout

\begin_layout Standard
If 
\begin_inset Formula $C=0$
\end_inset

:
\begin_inset Formula 
\[
T\left(t\right)=C_{\tau}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{K\partial_{x}^{2}X\left(x\right)-V\partial_{x}X\left(x\right)}{X\left(x\right)}=0\Rightarrow K\partial_{x}^{2}X\left(x\right)-V\partial_{x}X\left(x\right)=0\Rightarrow\partial_{x}^{2}X\left(x\right)=\frac{V}{K}\partial_{x}X\left(x\right)
\]

\end_inset


\begin_inset Formula 
\[
\partial_{x}X=Ce^{\frac{V}{K}x}\Rightarrow X=C\frac{K}{V}e^{\frac{V}{K}x}+B=\left(C\frac{K}{V}\right)\frac{V}{K}e^{\frac{V}{K}x}+b
\]

\end_inset


\end_layout

\begin_layout Standard
Since 
\begin_inset Formula $\rho\geq0$
\end_inset

 and 
\begin_inset Formula $V<0$
\end_inset

 we must have 
\begin_inset Formula $C<0$
\end_inset

.
 Since 
\begin_inset Formula $\int dxX\left(x\right)=1,$
\end_inset


\begin_inset Formula $B=0$
\end_inset

 and 
\begin_inset Formula $C\frac{K}{V}=-1$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
X=-\frac{V}{K}e^{\frac{V}{K}x}=\frac{V}{K}e^{-\frac{V}{K}x}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\partial_{t}\rho\left(x,t\right)=K\partial_{x}^{2}\rho\left(x,t\right)-V\partial_{x}\rho\left(x,t\right)=\partial_{x}\left(K\partial_{x}\rho-V\rho\right)=-\partial_{x}j
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{\partial\rho}{\partial t}+\partial_{x}j=0
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
j=V\rho-K\partial_{x}\rho
\]

\end_inset


\end_layout

\begin_layout Standard
integrate over some interval 
\begin_inset Formula $\left[x_{0},x_{1}\right]:$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{\partial\int_{x_{0}}^{x_{1}}dx\,\rho}{\partial t}+\int_{x_{0}}^{x_{1}}dx\,\partial_{x}j=0\Rightarrow\frac{\partial\left(P\left(x_{1},t\right)-P\left(x_{0},t\right)\right)}{\partial t}+\int_{x_{0}}^{x_{1}}dx\,\partial_{x}j=0
\]

\end_inset


\end_layout

\begin_layout Standard
Define 
\begin_inset Formula $P\left(x,t\right)=\int_{0}^{x}dx\rho\left(x,t\right)$
\end_inset


\begin_inset Formula 
\[
\Rightarrow\frac{\partial\left(P\left(x_{1},t\right)-P\left(x_{0},t\right)\right)}{\partial t}+j\left(x_{1}\right)-j\left(x_{0}\right)=0
\]

\end_inset


\begin_inset Formula 
\[
\Rightarrow\frac{\partial\left(P\left(x_{1},t\right)-P\left(x_{0},t\right)\right)}{\partial t}+\left(v\rho\left(x_{1},t\right)-D\partial_{x}\rho\left(x_{1},t\right)\right)-\left(v\rho\left(x_{0},t\right)-D\partial_{x}\rho\left(x_{0},t\right)\right)=0
\]

\end_inset


\end_layout

\begin_layout Standard
Now set 
\begin_inset Formula $x_{0}=0$
\end_inset

:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{\partial P\left(x_{1},t\right)}{\partial t}+\left(-v\rho\left(x_{1},t\right)+D\partial_{x}\rho\left(x_{1},t\right)\right)-\left(v\rho\left(0,t\right)-D\partial_{x}\rho\left(0,t\right)\right)=0
\]

\end_inset


\end_layout

\begin_layout Standard
and take 
\begin_inset Formula $x_{1}\rightarrow\infty$
\end_inset

:
\begin_inset Formula 
\[
\left(v\rho\left(x_{1},t\right)-D\partial_{x}\rho\left(x_{1},t\right)\right)-\left(v\rho\left(0,t\right)-D\partial_{x}\rho\left(0,t\right)\right)=0
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
v\rho\left(0,t\right)=D\partial_{x}\rho\left(0,t\right)
\]

\end_inset


\end_layout

\begin_layout Standard
We have 
\begin_inset Formula 
\[
L_{FP}=\partial_{x}Ke^{-V\left(x\right)}\partial_{x}e^{V\left(x\right)}=K\partial_{x}e^{-V\left(x\right)}\left(\partial_{x}e^{V\left(x\right)}+e^{V\left(x\right)}\partial_{x}\right)=K\partial_{x}\left(e^{-V\left(x\right)}e^{V\left(x\right)}\partial_{x}V\left(x\right)+e^{-V\left(x\right)}e^{V\left(x\right)}\partial_{x}\right)=K\left(\partial_{xx}V\left(x\right)+\partial_{x}V\left(x\right)\partial_{x}+\partial_{xx}\right)
\]

\end_inset

 for a linear potential 
\begin_inset Formula $L_{FP}=K\left(\partial_{xx}-V\partial_{x}\right)$
\end_inset

 so 
\begin_inset Formula $\partial_{t}\rho=L_{FP}\rho$
\end_inset

 
\end_layout

\begin_layout Standard
and 
\begin_inset Formula 
\[
L=e^{\frac{1}{2}V\left(x\right)}L_{FP}e^{-\frac{1}{2}V\left(x\right)}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{multline*}
L\rho=Ke^{\frac{1}{2}V\left(x\right)}\left(-V\partial_{x}+\partial_{xx}\right)\left(e^{-\frac{1}{2}V\left(x\right)}\rho\right)=Ke^{\frac{1}{2}V\left(x\right)}\left(-Ve^{-\frac{1}{2}V\left(x\right)}\partial_{x}\rho-Ve^{-\frac{1}{2}V\left(x\right)}\rho\left(-\frac{1}{2}\partial_{x}V\left(x\right)\right)+\partial_{x}\left(e^{-\frac{1}{2}V\left(x\right)}\partial_{x}\rho+\frac{1}{2}\rho e^{-\frac{1}{2}V\left(x\right)}\partial_{x}V\left(x\right)\right)\right)=\\
=K\left(\frac{1}{2}\rho V\partial_{x}V-V\partial_{x}\rho-\cancel{\frac{1}{2}\partial_{x}V\partial_{x}\rho}+\partial_{xx}\rho+\cancel{\frac{1}{2}\partial_{x}\rho\partial_{x}V}-\frac{1}{4}\rho\left(\partial_{x}V\left(x\right)\right)^{2}+\frac{1}{2}\rho\partial_{xx}V\left(x\right)\right)
\end{multline*}

\end_inset

for linear potential 
\begin_inset Formula $V\left(x\right)=\alpha x$
\end_inset

:
\begin_inset Formula 
\[
L\rho=K\left(\frac{1}{2}\alpha^{2}x\rho-\alpha x\partial_{x}\rho-\frac{1}{4}\alpha^{2}\rho+\partial_{xx}\rho\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
L\rho=K\left(\frac{1}{4}\left(\partial_{x}V^{2}-\left(\partial_{x}V\left(x\right)\right)^{2}\right)\rho-V\partial_{x}\rho+\partial_{xx}\rho\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\rho\left(x,t\right)=\frac{V}{K\left(e^{\frac{V}{K}L}-1\right)}e^{\frac{V}{K}x}+\frac{2}{L}e^{-\frac{V^{2}}{4K}t}e^{\frac{V}{2K}\left(x-x_{0}\right)}\frac{1}{1+\left(\frac{VL}{2\pi K}\right)^{2}}\left(\cos\left(\frac{\pi}{L}x_{0}\right)+\frac{VL}{2\pi K}\sin\left(\frac{\pi}{L}x_{0}\right)\right)e^{-K\left(\frac{\pi}{L}\right)^{2}t}\left(\cos\left(\frac{\pi}{L}x\right)+\frac{VL}{2\pi K}\sin\left(\frac{\pi}{L}x\right)\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\cos\left(\frac{\pi}{L}x\right)=\cos\left(\frac{\pi}{L}x+2\pi\right)=\cos\left(\frac{\pi}{L}\left(x+2L\right)\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
T=\frac{2\pi}{\pi/L}=2L
\]

\end_inset


\end_layout

\begin_layout Standard
Let's try to solve with a gaussian initial state of width 
\begin_inset Formula $W=\frac{\alpha}{L}$
\end_inset

 with 
\begin_inset Formula $\left[\alpha\right]=m^{3}$
\end_inset

:
\begin_inset Formula 
\[
\rho\left(x,0\right)=\sqrt{\frac{L}{4\pi}}e^{-\frac{L\left(x-x_{0}\right)^{2}}{4}}=A\left(0,t\right)B\left(0,t\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\begin{cases}
A\left(0,t\right) & =e^{\frac{V}{2K}x}\\
B\left(0,t\right) & =\sqrt{\frac{L}{4\pi}}e^{-\frac{L^{2}\left(x-x_{0}\right)^{2}}{4}}e^{-\frac{V}{2K}x}
\end{cases}
\]

\end_inset


\begin_inset Formula 
\[
\sqrt{\frac{L}{4\pi\alpha}}e^{-L\frac{x^{2}+2x\left(\frac{\alpha V}{LK}-x_{0}\right)+x_{0}^{2}}{4\alpha}}=\sqrt{\frac{L}{4\alpha\pi}}e^{-L\frac{\left(x-x_{0}+\frac{\alpha V}{LK}\right)^{2}}{4\alpha}}e^{-\frac{V\left(2x_{0}-\frac{\alpha V}{LK}\right)}{4K}}
\]

\end_inset


\begin_inset Formula 
\[
\rho\left(x,t=0\right)=A\left(x,0\right)\left[C_{+}e^{\frac{V}{2K}x}+\sum_{n}C_{k,n}\left(\cos\left(\frac{n\pi}{L}x\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x\right)\right)\right]=\sqrt{\frac{L}{4\alpha\pi}}e^{-\frac{L\left(x-x_{0}\right)^{2}}{4\alpha}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\Rightarrow C_{+}e^{\frac{V}{2K}x}+\sum_{k}C_{k,1}\left(\cos\left(\frac{n\pi}{L}x\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x\right)\right)=e^{-\frac{V}{2K}x}\sqrt{\frac{L}{4\alpha\pi}}e^{-\frac{L\left(x-x_{0}\right)^{2}}{4\alpha}}
\]

\end_inset


\begin_inset Formula 
\[
\Rightarrow\int_{0}^{L}dxC_{k,+}e^{\frac{V}{K}x}=\int_{0}^{L}dx\sqrt{\frac{L}{4\alpha\pi}}e^{-\frac{L\left(x-x_{0}\right)^{2}}{4\alpha}}=1\Rightarrow C_{k,+}=\frac{V}{K\left(e^{\frac{V}{K}L}-1\right)}\underset{L\rightarrow\infty}{\rightarrow}-\frac{V}{K}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\int_{0}^{L}dx\sum_{n}C_{n,1}\left(\cos\left(\frac{n\pi}{L}x\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x\right)\right)\left(\cos\left(\frac{m\pi}{L}x\right)+\frac{VL}{2m\pi K}\sin\left(\frac{m\pi}{L}x\right)\right)=\int_{0}^{L}dx\left(\cos\left(\frac{m\pi}{L}x\right)+\frac{VL}{2m\pi K}\sin\left(\frac{m\pi}{L}x\right)\right)e^{-\frac{V}{2K}x}\sqrt{\frac{L}{4\alpha\pi}}e^{-\frac{L\left(x-x_{0}\right)^{2}}{4\alpha}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{multline*}
\rightarrow C_{n,1}\int_{0}^{L}dx\left(\cos\left(\frac{n\pi}{L}x\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x\right)\right)^{2}=\int_{0}^{L}dx\left(\cos\left(\frac{n\pi}{L}x\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x\right)\right)e^{-\frac{V}{2K}x}\sqrt{\frac{L}{4\alpha\pi}}e^{-\frac{L\left(x-x_{0}\right)^{2}}{4\alpha}}=\\
=\sqrt{\frac{L}{4\alpha\pi}}e^{-\frac{V\left(2x_{0}-\frac{\alpha V}{LK}\right)}{4K}}\int_{0}^{L}dx\left(\cos\left(\frac{n\pi}{L}x\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x\right)\right)e^{-L\frac{\left(x-x_{0}+\frac{\alpha V}{LK}\right)^{2}}{4\alpha}}
\end{multline*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{multline*}
I_{\cos}\left[n\right]=\int_{0}^{L}dx\cos\left(\frac{n\pi}{L}x\right)e^{-L\frac{\left(x-x_{0}+\frac{\alpha V}{LK}\right)^{2}}{4\alpha}}=\int_{-x_{0}+\frac{\alpha V}{LK}}^{L-x_{0}+\frac{\alpha V}{LK}}dx\cos\left(\frac{n\pi}{L}\left(x'+x_{0}-\frac{\alpha V}{LK}\right)\right)e^{-L\frac{x'^{2}}{4\alpha}}=\\
=\int_{-x_{0}+\frac{\alpha V}{LK}}^{L-x_{0}+\frac{\alpha V}{LK}}dx\left[\cos\left(\frac{n\pi}{L}x'\right)\cos\left(\frac{n\pi}{L}\left(\frac{\alpha V}{LK}-x_{0}\right)\right)+\sin\left(\frac{n\pi}{L}x'\right)\sin\left(\frac{n\pi}{L}\left(\frac{\alpha V}{LK}-x_{0}\right)\right)\right]e^{-L\frac{x'^{2}}{4\alpha}}=\\
=\cos\left(\frac{n\pi}{L}\left(\frac{\alpha V}{LK}-x_{0}\right)\right)\int_{-x_{0}+\frac{\alpha V}{LK}}^{L-x_{0}+\frac{\alpha V}{LK}}dx\left[\cos\left(\frac{n\pi}{L}x\right)\right]e^{-L\frac{x^{2}}{4\alpha}}+\sin\left(\frac{n\pi}{L}\left(\frac{\alpha V}{LK}-x_{0}\right)\right)\int_{-x_{0}+\frac{\alpha V}{LK}}^{L-x_{0}+\frac{\alpha V}{LK}}dx\sin\left(\frac{n\pi}{L}x\right)e^{-L\frac{x^{2}}{4\alpha}}=\\
=\frac{L}{n\pi}\cos\left(\frac{n\pi}{L}\left(\frac{\alpha V}{LK}-x_{0}\right)\right)\int_{\frac{n\pi}{L}\left(-x_{0}+\frac{\alpha V}{LK}\right)}^{\frac{n\pi}{L}\left(L-x_{0}+\frac{\alpha V}{LK}\right)}dx\left[\cos\left(x\right)\right]e^{-L\frac{\left(\frac{L}{n\pi}x'\right)^{2}}{4\alpha}}+\frac{L}{n\pi}\sin\left(\frac{n\pi}{L}\left(\frac{\alpha V}{LK}-x_{0}\right)\right)\int_{\frac{n\pi}{L}\left(-x_{0}+\frac{\alpha V}{LK}\right)}^{\frac{n\pi}{L}\left(L-x_{0}+\frac{\alpha V}{LK}\right)}dx\sin\left(x\right)e^{-L\frac{\left(\frac{L}{n\pi}x'\right)^{2}}{4\alpha}}=\\
=\frac{L}{n\pi}\cos\left(\frac{n\pi}{L}\left(\frac{\alpha V}{LK}-x_{0}\right)\right)\int_{-\infty}^{\infty}dx\cos\left(x\right)e^{-L\frac{\left(\frac{L}{n\pi}x'\right)^{2}}{4\alpha}}+\frac{L}{n\pi}\sin\left(\frac{n\pi}{L}\left(\frac{\alpha V}{LK}-x_{0}\right)\right)\cancel{\int_{-\infty}^{\infty}dx\sin\left(x\right)e^{-L\frac{\left(\frac{L}{n\pi}x'\right)^{2}}{4\alpha}}}=\\
=\frac{L}{n\pi}\cos\left(\frac{n\pi}{L}\left(\frac{\alpha V}{LK}-x_{0}\right)\right)\sqrt{\frac{4\alpha\pi}{L\left(\frac{L}{n\pi}\right)^{2}}}e^{-\frac{4\alpha}{4L\left(\frac{L}{n\pi}\right)^{2}}}
\end{multline*}

\end_inset


\begin_inset Formula 
\[
I_{\sin}\left[n\right]=\int_{0}^{L}dx\cos\left(\frac{n\pi}{L}x\right)e^{-L\frac{\left(x-x_{0}+\frac{\alpha V}{LK}\right)^{2}}{4\alpha}}=-\frac{L}{n\pi}\sin\left(\frac{n\pi}{L}\left(\frac{\alpha V}{LK}-x_{0}\right)\right)\sqrt{\frac{4\alpha\pi}{L\left(\frac{L}{n\pi}\right)^{2}}}e^{-\frac{4\alpha}{4L\left(\frac{L}{n\pi}\right)^{2}}}
\]

\end_inset


\end_layout

\begin_layout Standard
Maybe it is better to take:
\begin_inset Formula 
\[
\rho\left(x,0\right)=\begin{cases}
\frac{1}{W} & \left|x-x_{0}\right|\leq\frac{W}{2}\\
0 & \left|x-x_{0}\right|>\frac{W}{2}
\end{cases}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
B\left(0,t\right)=\begin{cases}
\frac{1}{W}e^{-\frac{V}{2K}x} & \left|x-x_{0}\right|\leq\frac{W}{2}\\
0 & \left|x-x_{0}\right|>\frac{W}{2}
\end{cases}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\int_{0}^{L}dx\sum_{n}C_{n,1}\left(\cos\left(\frac{n\pi}{L}x\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x\right)\right)\left(\cos\left(\frac{m\pi}{L}x\right)+\frac{VL}{2m\pi K}\sin\left(\frac{m\pi}{L}x\right)\right)=\int_{x_{0}-\frac{W}{2}}^{x_{0}+\frac{W}{2}}dx\left(\cos\left(\frac{m\pi}{L}x\right)+\frac{VL}{2m\pi K}\sin\left(\frac{m\pi}{L}x\right)\right)\frac{1}{W}e^{-\frac{V}{2K}x}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{multline*}
C_{n,1}\int_{0}^{L}dx\left(\cos\left(\frac{n\pi}{L}x\right)+\frac{VL}{2n\pi K}\sin\left(\frac{n\pi}{L}x\right)\right)^{2}=\frac{1}{W}\int_{x_{0}-\frac{W}{2}}^{x_{0}+\frac{W}{2}}dx\left(\cos\left(\frac{m\pi}{L}x\right)+\frac{VL}{2m\pi K}\sin\left(\frac{m\pi}{L}x\right)\right)e^{-\frac{V}{2K}x}=\\
=\frac{1}{W}\left(\frac{e^{-\frac{V}{2K}x}\left(\sin\left(\frac{m\pi}{L}x\right)\left(\left(\frac{m\pi}{L}\right)-\frac{VL}{2m\pi K}\frac{V}{2K}\right)-\cos\left(\frac{m\pi}{L}x\right)\left(\left(\frac{V}{2K}\right)+\frac{VL}{2m\pi K}\left(\frac{m\pi}{L}\right)\right)\right)}{\left(\frac{V}{2K}\right)^{2}+\left(\frac{m\pi}{L}\right)^{2}}\right)|_{x_{0}-\frac{W}{2}}^{x_{0}+\frac{W}{2}}=\\
=\frac{1}{W}\left(\frac{e^{-\frac{V}{2K}x}\left(\frac{L}{m\pi}\sin\left(\frac{m\pi}{L}x\right)\left(\left(\frac{m\pi}{L}\right)^{2}-\left(\frac{V}{2K}\right)^{2}\right)-\frac{V}{K}\cos\left(\frac{m\pi}{L}x\right)\right)}{\left(\frac{V}{2K}\right)^{2}+\left(\frac{m\pi}{L}\right)^{2}}\right)|_{x_{0}-\frac{W}{2}}^{x_{0}+\frac{W}{2}}=\\
=\frac{e^{-\frac{V}{2K}x_{0}}}{W}\left(\frac{e^{-\frac{VW}{4K}}\left(\frac{L}{m\pi}\sin\left(\frac{m\pi}{L}\left(x_{0}+\frac{W}{2}\right)\right)\left(\left(\frac{m\pi}{L}\right)^{2}-\left(\frac{V}{2K}\right)^{2}\right)-\frac{V}{K}\cos\left(\frac{m\pi}{L}\left(x_{0}+\frac{W}{2}\right)\right)\right)-e^{\frac{VW}{4K}}\left(\frac{L}{m\pi}\sin\left(\frac{m\pi}{L}\left(x_{0}-\frac{W}{2}\right)\right)\left(\left(\frac{m\pi}{L}\right)^{2}-\left(\frac{V}{2K}\right)^{2}\right)-\frac{V}{K}\cos\left(\frac{m\pi}{L}\left(x_{0}-\frac{W}{2}\right)\right)\right)}{\left(\frac{V}{2K}\right)^{2}+\left(\frac{m\pi}{L}\right)^{2}}\right)
\end{multline*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{\frac{L}{m\pi}\left(\left(\frac{m\pi}{L}\right)^{2}-\left(\frac{V}{2K}\right)^{2}\right)\left[-\left(e^{\frac{VW}{4K}}-e^{-\frac{VW}{4K}}\right)\cos\left(\frac{m\pi W}{2L}\right)\sin\left(\frac{m\pi}{L}x_{0}\right)+\left(e^{-\frac{VW}{4K}}+e^{\frac{VW}{4K}}\right)\cos\left(\frac{m\pi}{L}x_{0}\right)\sin\left(\frac{m\pi W}{2L}\right)\right]+\frac{V}{K}\left(\left(e^{\frac{VW}{4K}}-e^{-\frac{VW}{4K}}\right)\cos\left(\frac{m\pi}{L}x_{0}\right)\cos\left(\frac{m\pi W}{2L}\right)+\left(e^{\frac{VW}{4K}}+e^{-\frac{VW}{4K}}\right)\sin\left(\frac{m\pi}{L}x_{0}\right)\sin\left(\frac{m\pi W}{2L}\right)\right)}{\left(\frac{V}{2K}\right)^{2}+\left(\frac{m\pi}{L}\right)^{2}}
\]

\end_inset


\begin_inset Formula 
\[
\frac{L}{m\pi}\left(e^{\frac{VW}{4K}}-e^{-\frac{VW}{4K}}\right)\cos\left(\frac{m\pi W}{2L}\right)\left[\frac{m\pi}{L}\frac{V}{K}\cos\left(\frac{m\pi}{L}x_{0}\right)-\left(\left(\frac{m\pi}{L}\right)^{2}-\left(\frac{V}{2K}\right)^{2}\right)\sin\left(\frac{m\pi}{L}x_{0}\right)\right]
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{L}{m\pi}\left(e^{-\frac{VW}{4K}}+e^{\frac{VW}{4K}}\right)\sin\left(\frac{m\pi W}{2L}\right)\left[\left(\left(\frac{m\pi}{L}\right)^{2}-\left(\frac{V}{2K}\right)^{2}\right)\cos\left(\frac{m\pi}{L}x_{0}\right)+\frac{m\pi}{L}\frac{V}{K}\sin\left(\frac{m\pi}{L}x_{0}\right)\right]
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{V^{2}}{4K^{2}}
\]

\end_inset


\begin_inset Formula 
\[
C_{n,1}=e^{-\frac{V}{2K}x_{0}}\frac{2}{Wm\pi}\frac{\left[e^{-\frac{VW}{4K}}\sin\left(\frac{m\pi}{L}\left(x_{0}+\frac{W}{2}\right)\right)-e^{\frac{VW}{4K}}\sin\left(\frac{m\pi}{L}\left(x_{0}-\frac{W}{2}\right)\right)\right]}{\left(1+\left(\frac{VL}{2n\pi K}\right)^{2}\right)}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\Rightarrow\int_{0}^{L}dxC_{k,+}e^{\frac{V}{K}x}=\frac{1}{W}\int_{x_{0}-\frac{W}{2}}^{x_{0}+\frac{W}{2}}dx=1\Rightarrow C_{k,+}=\frac{V}{K\left(e^{\frac{V}{K}L}-1\right)}\underset{L\rightarrow\infty}{\rightarrow}-\frac{V}{K}
\]

\end_inset


\end_layout

\begin_layout Subsection
Finite-diferecnes equation - 3rd attempt (Fibonacci)
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
P\left(x,t\right)=\frac{F\left(L-x\right)}{F\left(L-x+2\right)+F\left(L-x+1\right)+F\left(L-x\right)}P\left(x-1,t-1\right)+\frac{F\left(L-x\right)}{F\left(L-x+1\right)+F\left(L-x\right)+F\left(L-x-1\right)}P\left(x,t-1\right)+\frac{F\left(L-x\right)}{F\left(L-x\right)+F\left(L-x-1\right)+F\left(L-x-2\right)}P\left(x+1,t-1\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
P\left(0,t\right)=\frac{F\left(L\right)}{F\left(L\right)+F\left(L-1\right)}P\left(0,t-1\right)+\frac{F\left(L\right)}{F\left(L\right)+F\left(L-1\right)+F\left(L-2\right)}P\left(1,t-1\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
P\left(1,t\right)=\frac{F\left(L-1\right)}{F\left(L\right)+F\left(L-1\right)}P\left(0,t-1\right)+\frac{F\left(L-1\right)}{F\left(L\right)+F\left(L-1\right)+F\left(L-2\right)}P\left(1,t-1\right)+\frac{F\left(L-1\right)}{F\left(L-1\right)+F\left(L-2\right)+F\left(L-3\right)}P\left(2,t-1\right)
\]

\end_inset


\end_layout

